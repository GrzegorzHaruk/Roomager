@model IEnumerable<Roomager.Web.Models.PaymentsModels.PaymentsRecord> 

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">

        <div class="col-sm-2">
            <div class="panel panel-default">
                <div class="panel-heading" style="text-align: center">
                    <h4><b>Payment Manager</b></h4>
                </div>

                <div class="panel-body">
                    <p style="display: inline">Select Year:</p>
                    <select class="select-shape">
                        <option>2010</option>
                        <option>2010</option>
                        <option>2010</option>
                        <option>2010</option>
                    </select>
                </div>

                <div class="panel-body">
                    <div>
                        <a asp-action="CreateRecord" asp-controller="PaymentsManager" class="btn btn-default button-center">
                            Add New Record
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-striped table-hover" style="font-size: 13px">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Date</th>
                                <th>Energy Reading</th>
                                <th>Energy Cost</th>
                                <th>Cold Water Reading</th>
                                <th>Cold Water Cost</th>
                                <th>Hot Water Reading</th>
                                <th>Hot Water Cost</th>
                                <th>Gas Cost</th>
                                <th>Total cost</th>
                                <th>Cost/person</th>
                                <th>
                                    <p style="text-align: center;">
                                        Options
                                    </p>
                                </th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>
                                        @record.RecordId
                                    </td>
                                    <td>
                                        @record.AddDate.ToString("MM.dd.yyyy")
                                    </td>
                                    <td>
                                        @record.EnergyReading
                                    </td>
                                    <td>
                                        @record.EnergyCost
                                    </td>
                                    <td>
                                        @record.ColdWaterReading
                                    </td>
                                    <td>
                                        @record.ColdWaterCost
                                    </td>
                                    <td>
                                        @record.HotWaterReading
                                    </td>
                                    <td>
                                        @record.HotWaterCost
                                    </td>
                                    <td>
                                        @record.GasCost
                                    </td>
                                    <td>
                                        @record.TotalCost
                                    </td>
                                    <td>
                                        @record.CostPerPerson
                                    </td>
                                    <td>
                                        <div>
                                            <a asp-action="RecordDetails" asp-controller="PaymentsManager" asp-route-id="@record.RecordId" class="btn btn-xs btn-default">Details</a>
                                            <a asp-action="EditRecord" asp-controller="PaymentsManager" asp-route-id="@record.RecordId" class="btn btn-xs btn-default">Edit</a>
                                            <a asp-action="DeleteRecord" asp-controller="PaymentsManager" asp-route-id="@record.RecordId" class="btn btn-xs btn-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>