@model Roomager.Web.Viewmodels.PaymentsViewModels.PaymentsRecordViewModel

@{
    ViewData["Title"] = "RecordDetails";
}

<div class="container">

    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <h4><b>Record Details</b></h4>                    
                </div>

                <div class="panel-body">

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.AddDate"></label>
                        <input asp-for="PaymentsRecord.AddDate" readonly="readonly" type="date" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.EnergyReading"></label>
                        <input asp-for="PaymentsRecord.EnergyReading" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.EnergyUsage"></label>
                        <input asp-for="PaymentsRecord.EnergyUsage" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.EnergyCost"></label>
                        <input asp-for="PaymentsRecord.EnergyCost" readonly="readonly" type="number" class="form-control">
                    </div>

                    <hr>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.ColdWaterReading"></label>
                        <input asp-for="PaymentsRecord.ColdWaterReading" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.ColdWaterCost"></label>
                        <input asp-for="PaymentsRecord.ColdWaterCost" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.HotWaterReading"></label>
                        <input asp-for="PaymentsRecord.HotWaterReading" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.HotWaterCost"></label>
                        <input asp-for="PaymentsRecord.HotWaterCost" readonly="readonly" type="number" class="form-control">
                    </div>

                    <hr>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.GasCost"></label>
                        <input asp-for="PaymentsRecord.GasCost" readonly="readonly" type="number" class="form-control">
                    </div>

                    <hr>

                    <div class="form-group ">
                        <label asp-for="PaymentsRecord.NumberOfTenants"></label>
                        <input asp-for="PaymentsRecord.NumberOfTenants" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.TotalCost"></label>
                        <input asp-for="PaymentsRecord.TotalCost" readonly="readonly" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsRecord.CostPerPerson"></label>
                        <input asp-for="PaymentsRecord.CostPerPerson" readonly="readonly" type="number" class="form-control">
                    </div>

                    <hr>

                    <div class="form-group ">
                        <label asp-for="PaymentsRecord.Comment"></label>
                        <textarea asp-for="PaymentsRecord.Comment" readonly="readonly" class="form-control"></textarea>
                    </div>

                    <hr>
                    <div class="form-group ">
                        <a asp-action="Index" asp-controller="PaymentsManager" class="btn btn-default">Back</a>
                    </div>


                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Energy Details
                </div>
                <div class="panel-body">

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.SellFee"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.SellFee" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.DistributionFee"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.DistributionFee" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.CogenerationFee"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.CogenerationFee" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.FixedDistributionFee"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.FixedDistributionFee" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.FixedTemporaryFee"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.FixedTemporaryFee" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.FixedSubscriptionFee"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.FixedSubscriptionFee" type="number" class="form-control">
                    </div>

                    <div class="form-group form-inline">
                        <label asp-for="PaymentsConfig.EnergyPaymentConfig.Tax"></label>
                        <input asp-for="PaymentsConfig.EnergyPaymentConfig.Tax" type="number" class="form-control">                        
                    </div>

                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="panel-group">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Water Details
                    </div>
                    <div class="panel-body">

                        <div class="form-group form-inline">
                            <label asp-for="PaymentsConfig.WaterPaymentsConfig.ColdWaterFee"></label>
                            <input asp-for="PaymentsConfig.WaterPaymentsConfig.ColdWaterFee" type="number" class="form-control">
                        </div>

                        <div class="form-group form-inline">
                            <label asp-for="PaymentsConfig.WaterPaymentsConfig.HotWaterFee"></label>
                            <input asp-for="PaymentsConfig.WaterPaymentsConfig.HotWaterFee" type="number" class="form-control">
                        </div>

                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        Gas Details
                    </div>
                    <div class="panel-body">

                        <div class="form-group form-inline">
                            <label asp-for="PaymentsConfig.GasPaymentsConfig.GasFee"></label>
                            <input asp-for="PaymentsConfig.GasPaymentsConfig.GasFee" type="number" class="form-control">
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>