@model Roomager.Web.Models.PaymentsModels.PaymentsRecord

@{
    ViewData["Title"] = "EditRecord";
}

<div class="container">
    <form asp-action="EditRecord" method="post">
        <div class="row">

            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><b>Edit Record</b></h4>
                    </div>
                    <div class="panel-body">

                        <div class="form-group form-inline" hidden="hidden">
                            <input asp-for="RecordId" type="number" class="form-control">
                        </div>

                        <div class="form-group form-inline">
                            <label asp-for="AddDate"></label>
                            <input asp-for="AddDate" type="date" class="form-control">
                            <span asp-validation-for="AddDate" class="text-danger"></span>
                        </div>

                        <div class="form-group form-inline">
                            <label asp-for="EnergyCost"></label>
                            <input asp-for="EnergyCost" type="number" class="form-control">
                            <span asp-validation-for="EnergyCost" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="form-group form-inline">
                            <label asp-for="ColdWaterCost"></label>
                            <input asp-for="ColdWaterCost" type="number" class="form-control">
                            <span asp-validation-for="ColdWaterCost" class="text-danger"></span>
                        </div>

                        <div class="form-group form-inline">
                            <label asp-for="HotWaterCost"></label>
                            <input asp-for="HotWaterCost" type="number" class="form-control">
                            <span asp-validation-for="HotWaterCost" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="form-group form-inline">
                            <label asp-for="GasCost"></label>
                            <input asp-for="GasCost" type="number" class="form-control">
                            <span asp-validation-for="GasCost" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="form-group ">
                            <label asp-for="NumberOfTenants"></label>
                            <select asp-for="NumberOfTenants" class="select-shape">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>

                        <div class="form-group form-inline">
                            <label asp-for="TotalCost"></label>
                            <input asp-for="TotalCost" type="number" class="form-control">
                            <span asp-validation-for="TotalCost" class="text-danger"></span>
                        </div>

                        <div class="form-group form-inline">
                            <label asp-for="CostPerPerson"></label>
                            <input asp-for="CostPerPerson" type="number" class="form-control">
                            <span asp-validation-for="CostPerPerson" class="text-danger"></span>
                        </div>

                        <hr>

                        <div class="form-group ">
                            <label asp-for="Comment"></label>
                            <textarea asp-for="Comment" class="form-control"></textarea>
                        </div>

                        <hr>

                        <div class="form-group ">
                            <a class="btn btn-default">Recalculate</a>
                            <a class="btn btn-default">Clear</a>
                            <input type="submit" value="Save" class="btn btn-default">
                            <a asp-action="Index" asp-controller="PaymentsManager" class="btn btn-danger">Cancel</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>